#Exercício 01:
class Estudante:
    def __init__(self, nome, idade):
        self.nome = nome
        self.idade = idade
    
    def apresentar(self):
        print(f"Olá, meu nome é {self.nome} e tenho {self.idade} anos.")

estudante1 = Estudante("João", 20)
estudante1.apresentar()

#Exercício 02:
class Estudante:
    def __init__(self, nome, idade):
        self.nome = nome
        self.idade = idade
    
    def apresentar(self):
        print(f"Olá, meu nome é {self.nome} e tenho {self.idade} anos.")

estudante1 = Estudante("João", 20)
estudante2 = Estudante("Maria", 22)
estudante3 = Estudante("Pedro", 19)

estudante1.apresentar()
estudante2.apresentar()
estudante3.apresentar()

#Exercício 03:
class Estudante:
    def __init__(self, nome, idade, curso):
        self.nome = nome
        self.idade = idade
        self.curso = curso
    
    def apresentar(self):
        print(f"Olá, meu nome é {self.nome}, tenho {self.idade} anos e estou cursando {self.curso}.")

estudante1 = Estudante("João", 20, "Engenharia")
estudante2 = Estudante("Maria", 22, "Psicologia")
estudante3 = Estudante("Pedro", 19, "Medicina")


estudante1.apresentar()
estudante2.apresentar()
estudante3.apresentar()

#Exercício 04:
class Estudante:
    def __init__(self, nome, idade, curso):
        self.nome = nome
        self.idade = idade
        self.curso = curso
    
    def apresentar(self):
        print(f"Olá, meu nome é {self.nome}, tenho {self.idade} anos e estou cursando {self.curso}.")
    
    def aniversario(self):
        self.idade += 1

estudante1 = Estudante("João", 20, "Engenharia")
estudante1.aniversario()
estudante1.apresentar()
